{
  "name": "dream-game-client",
  "version": "1.0.0",
  "description": "A 3D Dream Game Client",
  "author": "Jerald Golden",
  "private": true,
  "main": "./out/main/index.js",
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-select": "^2.2.6",
    "@react-three/drei": "^9.114.6",
    "@react-three/fiber": "^8.7.4",
    "@react-three/rapier": "^1.5.0",
    "@supabase/supabase-js": "^2.89.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "immer": "^11.1.3",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.11.0",
    "socket.io-client": "^4.8.3",
    "tailwind-merge": "^3.4.0",
    "three": "^0.170.0",
    "typescript": "^4.9.5",
    "zustand": "^5.0.0-rc.2"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "electron-vite dev",
    "electron:build": "electron-vite build && electron-builder",
    "electron:preview": "electron-vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md,json}\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.dreamgame.app",
    "productName": "Dream Game",
    "directories": {
      "output": "out/releases/${version}"
    },
    "files": [
      "out/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "signAndEditExecutable": false,
      "forceCodeSigning": false
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "jeral-golden",
        "repo": "Dream-Game"
      }
    ]
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@types/node": "^22.9.1",
    "@types/three": "^0.169.0",
    "@vitejs/plugin-react": "^5.1.2",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3"
  }
}